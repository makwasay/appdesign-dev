<% provide(:title, "Assignments") %>
<body>
<p id="flash"><%= notice %></p>

<h2>Current Assignments</h2>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start Date</th>
      <th>End date</th>
      <th>Pay level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_assignments.each do |assignment| %>
      <tr>
        <td><%= link_to "#{assignment.store.name}", assignment.store %></td>
        <td><%= link_to "#{assignment.employee.name}", assignment.employee %></td>
        <td><%= assignment.start_date %></td>
        <td><%= assignment.end_date %></td>
        <td><%= assignment.pay_level %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path %>

<h2>Past Assignments</h2>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start Date</th>
      <th>Pay level</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_assignments.each do |assignment| %>
      <tr>
        <td><%= link_to "#{assignment.store.name}", assignment.store %></td>

        <td><%= assignment.start_date %></td>
        <td><%= assignment.pay_level %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</body>