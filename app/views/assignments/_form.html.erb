<%= simple_form_for(@assignment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :store_id %>
    <%= f.collection_select :store_id, Store.active, :id, :name, :prompt => "Select Store" %>

    <br>

    <%= f.label :employee_id %>
    <%= f.collection_select :employee_id, Employee.active, :id, :name, :prompt => "Select Employee" %> 

    <br>
    
    <%= f.input :start_date %>

    <br>

    <%= f.label :pay_level %>
    <%= f.select(:pay_level, ['1','2','3','4','5','6']) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
