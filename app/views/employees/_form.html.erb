<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :ssn %>
    <%= f.input :date_of_birth %>
    <%= f.input :phone %>
    
    <%= f.label :role %>
    <%= f.select(:role, ['employee','admin','manager']) %>
    
    <%= f.input :role %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
