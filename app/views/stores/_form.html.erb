<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street %>
    <%= f.input :city %>
    
    <%= f.label :state %>
    <%= f.select(:state, ['PA','WV','OH']) %>
    
    <%= f.input :zip %>
    <%= f.input :phone %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
